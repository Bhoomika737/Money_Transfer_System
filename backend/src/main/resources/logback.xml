<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    /*Logs will be created at project-root/logs/*/

    <property name="LOG_PATH" value="logs"/>
    <property name="APP_LOG_FILE" value="${LOG_PATH}/application.log"/>

    <appender name="APPLICATION_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">

        <file>${APP_LOG_FILE}</file>

        <append>true</append>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                ${LOG_PATH}/application-%d{yyyy-MM-dd}.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} %-5level [%thread]
                %logger{36}.%method:%line - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.moneytransfersystem"
            level="INFO"
            additivity="false">
        <appender-ref ref="APPLICATION_FILE"/>
    </logger>

    <logger name="org.springframework"
            level="INFO"/>

    <logger name="org.hibernate"
            level="WARN"/>

    <root level="INFO">
        <appender-ref ref="APPLICATION_FILE"/>
    </root>

</configuration>
